html
	head
		title= title
	body
		h1= title
		form(action="/add_movie" method="POST")
			div.form-group
				label(for='title') Title: 
				input#title.form-control(type="text" name="title" value="")
				label(for='year') Year: 
				input#year.form-control(type="text" name="year" value="")
				label(for='imdb') IMDB: 
				input#imdb.form-control(type="text" name="imdb" value="")
			button.btn.btn-primary(type='submit') Submit
